<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/padding_14"
        android:text="@string/app_name"
        android:textColor="@color/ct_1"
        android:textSize="@dimen/text_18"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line" />

    <TextView
        android:id="@+id/tv_item_jar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/padding_14"
        android:textColor="@color/ct_1"
        android:textSize="@dimen/text_15"
        tools:text="Jar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="@dimen/padding_14"
        android:background="@color/color_line" />

    <TextView
        android:id="@+id/tv_item_flutter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/padding_14"
        android:textColor="@color/ct_1"
        android:textSize="@dimen/text_15"
        tools:text="Flutter" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="@dimen/padding_14"
        android:background="@color/color_line" />

    <TextView
        android:id="@+id/tv_item_rn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/padding_14"
        android:textColor="@color/ct_1"
        android:textSize="@dimen/text_15"
        tools:text="RN" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="@dimen/padding_14"
        android:background="@color/color_line" />

    <TextView
        android:id="@+id/tv_item_dsl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/padding_14"
        android:textColor="@color/ct_1"
        android:textSize="@dimen/text_15"
        tools:text="DSL" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line" />

</LinearLayout>
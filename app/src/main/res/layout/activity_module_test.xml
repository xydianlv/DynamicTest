<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/padding_14"
        android:text="@string/app_name"
        android:textColor="@color/ct_1"
        android:textSize="@dimen/text_18"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line" />

    <com.example.dynamictest.common.views.LoadTypeLayout
        android:id="@+id/view_load_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line" />

    <FrameLayout
        android:id="@+id/fl_container_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="40.0dp"
        android:layout_marginVertical="20.0dp"
        android:layout_weight="1"
        android:background="@color/color_line" />

    <FrameLayout
        android:id="@+id/fl_container_bot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="40.0dp"
        android:layout_marginVertical="20.0dp"
        android:layout_weight="1"
        android:background="@color/color_line" />

</LinearLayout>
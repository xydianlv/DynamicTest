<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        android:gravity="start|center_vertical"
        android:paddingHorizontal="@dimen/padding_14"
        android:textColor="@color/ct_1"
        android:textSize="@dimen/text_18"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <View
        android:id="@+id/v_divide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_line"
        android:background="@color/color_line"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_marginHorizontal="20.0dp"
        android:layout_marginVertical="20.0dp"
        android:background="@color/color_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_divide" />

</androidx.constraintlayout.widget.ConstraintLayout>